version: "3.8"
services:
  db:
    image: mysql:8.0
    container_name: my_ecom_db
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: "${MYSQL_ROOT_PASSWORD:-rootpassword}"
      MYSQL_DATABASE: "${MYSQL_DATABASE:-ecommerce}"
      MYSQL_USER: "${MYSQL_USER:-ecomuser}"
      MYSQL_PASSWORD: "${MYSQL_PASSWORD:-ecompassword}"
    volumes:
      - db_data:/var/lib/mysql
      - ./db/init:/docker-entrypoint-initdb.d  # optional: .sql files to run on first start
    ports:
      - "3306:3306"
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: backend
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy
    env_file:
      - ./backend/.env.production  # make sure this exists (do not commit secrets)
    environment:
      DB_HOST: db
      DB_USER: ${MYSQL_USER:-ecomuser}
      DB_PASSWORD: ${MYSQL_PASSWORD:-ecompassword}
      DB_NAME: ${MYSQL_DATABASE:-ecommerce}
      PORT: 5000
      # Add other env vars here (JWT_SECRET, EMAIL_USER, etc.)
    volumes:
      - ./backend/uploads:/usr/src/app/uploads   # persist uploads
    ports:
      - "5000:5000"

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    image: ${IMAGE_NAME}:${IMAGE_TAG}
    container_name: ${CONTAINER_NAME}
    restart: unless-stopped
    depends_on:
      - backend
    environment:
      # Optional: if you used runtime env injection, define REACT_APP_API_URL
      REACT_APP_API_URL: "http://localhost:5000"
    ports:
      - "${HOST_PORT}:80"   # maps nginx:80 -> host:3000
    volumes:
      - /dev/null:/usr/share/nginx/html/cache  # optional, avoid caching issues

volumes:
  db_data: